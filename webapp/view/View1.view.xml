                        <ToolbarSpacer />
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column width="8rem">
                        <Label text="" />
                        <t:template>
                            <Text
                                text="{col1}"
                                wrapping="false"
                            />
                        </t:template>
                    </t:Column>
                    <t:Column width="9.45rem">
