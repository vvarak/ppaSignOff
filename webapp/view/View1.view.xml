        <footer>
            <OverflowToolbar class="sapUiContentPadding">
                <MessageStrip
                    text="Please ensure to download the document, 
                    review it thoroughly, sign it off, and then upload it back. Thank you!."
                    type="Information"
                    class="sapUiTinyMargin"
                    showIcon="true"
                    showCloseButton="false"
                />

                <ToolbarSpacer />
                <u:FileUploader
                    id="fileUploader1"
                    name="myFileUpload"
                    uploadUrl="upload/"
                    tooltip="Upload your file to the local server"
                    uploadComplete="handleUploadComplete"
                    class="sapUiTinyMargin"
                    buttonOnly="true"
                    buttonText="Upload"
                    icon="sap-icon://upload"
                />
                <Button
                    text="Download"
                    icon="sap-icon://download"
                    class="sapUiTinyMargin"
                    press=".generatePDF"
                />
            </OverflowToolbar>
        </footer>
